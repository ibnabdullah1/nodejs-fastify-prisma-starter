generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // চাইলে mysql/sqlite/mongodb ব্যবহার করতে পারো
  url      = env("DATABASE_URL")
}

/// =======================
/// USER & AUTH MODULE
/// =======================
model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String // hashed password
  role         UserRole @default(USER)
  refreshToken String? // store latest refresh token
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  media Media[]
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  EDITOR
  PUBLISHER
  USER
}

/// =======================
/// MEDIA MODULE
/// =======================
model Media {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  folder      String?
  type        String
  size        Int
  altText     String? // Alternative text
  title       String? // Title
  caption     String? // Caption
  description String? // Description
  uploadedBy  Int?
  uploader    User?    @relation(fields: [uploadedBy], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
